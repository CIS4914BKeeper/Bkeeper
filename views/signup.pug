extends index

block content
  .container
    .row.justify-content-center
      .col-lg-4.col-md-6.col-sm-8
        form#requestForm
          a(href='/')
            .text-start.mb-3
              button#backButton.btn.btn-link(type='button')
                | &larr; Back
          h2.text-center.mb-4 Request Account
          .mb-3
            label.form-label(for='schoolInput') School
            input#schoolInput.form-control(type='text' list='schools' placeholder='Enter or select a school')
            datalist#schools
              //- Options will be loaded dynamically using JavaScript
          .mb-3
            label.form-label(for='email') Email
            input#email.form-control(type='email' placeholder='Enter your email', required)
          .mb-3
            label.form-label(for='student-id') Student ID
            input#student-id.form-control(type='text' placeholder='Enter your student ID')
          .mb-3
            label.form-label(for='name') Name
            input#name.form-control(type='text' placeholder='Enter your name')
          .mb-3
            label.form-label(for='phone') Phone Number
            input#phone.form-control(type='text' placeholder='Enter your phone number')
          .mb-3
            label.form-label(for='classes') Classes
            input#classes.form-control(type='text' placeholder='Enter or select your classes')
            datalist#classes
              //- Options will be loaded dynamically using JavaScript
          button#SubmitAccountBtn.btn.btn-primary.w-100.mx-auto(type='submit')
            | Submit Request
          p#missingFieldsMessage.text-center.mt-3.text-danger.fw-bold(style='display: none')
            | Please fill out all the fields
  #thankYouContainer.container(style='display: none')
    .row.justify-content-center
      .col-lg-8.col-md-10
        .alert.alert-success.text-center.mt-4.thank-you-message(role='alert')
          | Thank you for requesting an account! Check your email for updates.
  #countdownContainer.container(style='display: none')
    .row.justify-content-center
      .col-lg-8.col-md-10
        #countdownMessage.text-center.mt-4(role='alert')
          | Redirecting page in 
          span#countdownTime 5
          |  seconds...

  //- script(src='/js/signup.js')