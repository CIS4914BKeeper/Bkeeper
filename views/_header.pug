.banner.bg-black.py-1
  if user
    .banner.bg-black.py-1
    .container.d-flex.align-items-center.justify-content-between
      a(href='/')
        img.logo(src='/img/logo.png' alt='Logo')
      .user-menu
        // User Logo with Dropdown Menu
        .dropdown
          button#userMenuButton.btn.btn-secondary.dropdown-toggle(type='button' data-bs-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
            img.user-logo(src='/img/user-logo.png' alt='User Logo')
          .dropdown-menu.dropdown-menu-end(aria-labelledby='userMenuButton')
            a.dropdown-item.logout(href='/') Logout

  else
    .container.d-flex.align-items-center
      a(href='/')
        img.logo(src='/img/logo.png' alt='Logo')
        #button-container.d-flex.align-items-center
            a(href='/login')
              button#loginPageBtn.btn.btn-primary.mx-2(type='button')
                | Login
            a(href='/signup')
              button#requestAccountBtn.btn.btn-primary(type='button')
                | Request Account
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz' crossorigin='anonymous')
  
  