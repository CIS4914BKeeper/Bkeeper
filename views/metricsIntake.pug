

html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Bkeeper | #{title}
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM' crossorigin='anonymous')
    link(rel='stylesheet' href='/css/style.css')
  

    
   

block content
.container
  .row.justify-content-center
    .col-lg-8.col-md-12.col-sm-16
      form#studentInfoForm
        a(href="javascript:history.back()")
          .text-start.mb-3
            button#backButton.btn.btn-link(type='button')
              | &larr; Back
        h2.text-center.mb-4 Student Information Form
        .mb-3
          label.form-label(for='student_id') Student ID
          input#student_id.form-control(type='text' name='student_id' required)
        .mb-3
          label.form-label(for='student_name') Student Name
          input#student_name.form-control(type='text' name='student_name' required)
        .mb-3
          label.form-label(for='infType') Infraction Type 
          input#student_id.form-control(type='text' name='infType' required)
        .mb-3
          label.form-label(for='bgrade') BGrade
          input#bgrade.form-control(type='text' name='bgrade' required)
        .mb-3
          input#submitButton.form-control(type='submit' value='Submit')


include _footer
    
